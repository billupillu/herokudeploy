<p id="notice"><%= notice %></p>

<h2 style="color:#333333;text-shadow:0 0 1px #e45f91,0 0 1px #333333;text-align:center;">Testimonials</h2>
<br>
<p style="margin-left:17vw;" class="btn btn-default"><%= link_to 'New Testimonial', new_testimonial_path %></p>
<br>
<%a=1%>
  <div class="row">
    <% @testimonials.each do |testimonial| %>
      <div class="col-sm-8 col-sm-offset-2">
      <div class="pannel" style="background-color:#333333 !important; color:#fff;border-radius:0px !important;border:none !important; height:100px;padding:12px;margin-top:20px;">
        <h4><%= truncate(testimonial.content,length: 200) %></h4>
        <%if a.odd?%>
          <%b="e45f91"%>
        <%else%>
          <%b="4596b8"%>
        <%end%>  
        <div class="panel-footer" style="background-color:#<%=b%> !important; color:#fff;border-radius:0px !important;border:none !important;padding:12px;height:40px;">
          <p style="inline"><%= testimonial.name %>&nbsp;&nbsp;&nbsp;&nbsp;
             <%if spree_current_user.id == testimonial.spree_user_id || spree_current_user.has_spree_role?("admin") %>
               <%= link_to 'Show', testimonial %>
               <%= link_to 'Edit', edit_testimonial_path(testimonial) %>
               <%= link_to 'Destroy', testimonial, method: :delete, data: { confirm: 'Are you sure?' } %>
             <%else%>
               <%= link_to Spree.t(:login), spree.login_path %>
             <%end%>
          </p>   
        </div>
      </div>
      <%a+=1%>
      </div>
    <%end%>  
  </div>    
        
   
<style type="text/css">.btn-default a{text-decoration: none;background-color: transparent;}.btn-default a:hover{text-decoration: none;background-color: transparent;}</style>

