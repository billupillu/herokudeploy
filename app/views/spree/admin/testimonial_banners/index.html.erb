<h3>Update footer banner Image .... Image Size: 1500x1125 px</h3>
<div class="btn btn-default"><a href="/testimonials">Link to Testimonials</a></div>

<table class="table sortable" id="listing_testimonial_banners" data-hook data-sortable-link="<%= update_positions_admin_testimonial_banners_url %>">
  <thead>
    <tr data-hook="admin_testimonial_banners_index_headers">
      <th class="no-border"></th>
      <th><%= t(:position, scope: 'activerecord.attributes.spree/testimonial_banner') %></th>
      <th>Testimonial Banner Image</th>
      <th data-hook="admin_testimonial_banners_index_header_actions" class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @testimonial_banners.each do |testimonial_banner| %>
      <tr id="<%= spree_dom_id testimonial_banner %>" data-hook="admin_testimonial_banners_index_rows" class="<%= cycle('odd', 'even')%>">
        <td class="move-handle"><span class="icon icon-move handle"></span></td>
        <td><%= link_to testimonial_banner.position, edit_object_url(testimonial_banner) %></td>
        <td><%=image_tag testimonial_banner.testimonial_banner_img(:thumb)%></td>
        <td data-hook="admin_testimonial_banners_index_row_actions" class="actions text-right">
          <%= link_to_edit testimonial_banner, no_text: true %>
          <%= link_to_delete testimonial_banner, no_text: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @testimonial_banners %>
