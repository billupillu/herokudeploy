<% content_for :page_title do %>
  <%= Spree.t(:listing_feature_menu_images) %>
<% end %>



<table class="table" id="listing_feature_menu_images" data-hook>
  <thead>
    <tr data-hook="admin_feature_menu_images_index_headers">
      <th><%= t(:feature_img, scope: 'activerecord.attributes.spree/feature_menu_image') %></th>
      <th data-hook="admin_feature_menu_images_index_header_actions" class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @feature_menu_images.each do |feature_menu_image| %>
      <tr id="<%= spree_dom_id feature_menu_image %>" data-hook="admin_feature_menu_images_index_rows" class="<%= cycle('odd', 'even')%>">
        <td><%=feature_menu_image.feature_h_main%></td>
        <td><%=image_tag feature_menu_image.feature_img(:thumb)%></td>
        <td><%=feature_menu_image.feature_h_sub%></td>
        <td><%=feature_menu_image.feature_h_footer%></td>
        <td><%=feature_menu_image.feature_url%></td>
        <td data-hook="admin_feature_menu_images_index_row_actions" class="actions text-right">
          <%= link_to_edit feature_menu_image, no_text: true %>
          <%= link_to_delete feature_menu_image, no_text: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @feature_menu_images %>
